<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DriverInformation">

    <EditText
        android:id="@+id/licenseBox"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="168dp"
        android:ems="10"
        android:hint="License number"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:text="Drivers License no:"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/licenseBox"
        app:layout_constraintEnd_toStartOf="@+id/licenseBox"
        app:layout_constraintTop_toTopOf="@+id/licenseBox" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:text="Pleaes enter the following information"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="108dp"
        android:text="Finish"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:text="Criminal History:"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/historyBox"
        app:layout_constraintEnd_toStartOf="@+id/historyBox"
        app:layout_constraintTop_toTopOf="@+id/historyBox"
        app:layout_constraintVertical_bias="0.444" />

    <EditText
        android:id="@+id/historyBox"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginTop="68dp"
        android:ems="10"
        android:hint="History"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/licenseBox" />
</androidx.constraintlayout.widget.ConstraintLayout>